<tr class=<%=person.Status%>>
	<td>
  	<%= render :partial => "shared/action",
  	 :locals =>	{
  	 	 	:action => "edit",
  		 	:id => person.id, 
  			:label => 'Edit', 
  			:title => "Edit #{person.Name}",
  			:fmt => 'js'}
		 %>
	</td>
  <td><%= link_to image_tag("delete-item.png"), { :action => "destroy", :id => person.id },
          :data => { :confirm => 'Are you sure?' }, :method => :delete, :class=> :delete %> </td>
          
  <% Person::INDEX_FIELDS.each do |i| %>
  	<%= content_tag :td, person.send(i) %>
  <% end%>
</tr>

