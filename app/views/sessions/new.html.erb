<div id="loginForm" class="ui-widget">

  <h1 class="ui-widget-header">Ecoportal Login</h1>
  <fieldset class="ui-widget-content">
    <%= form_tag sessions_path do %>
    <p>
      <%= label_tag :email, nil, :class=>"incontent" %>
      <%= text_field_tag :email, params[:email], :size => '50' %>
    </p>
    <p>
      <%= label_tag :password, nil, :class=>"incontent" %>
      <%= password_field_tag :password, '', :size=>'50' %>
    </p>
    <%= submit_tag "Log in", :class => :button %>
    <% end %>
  </fieldset>

</div>